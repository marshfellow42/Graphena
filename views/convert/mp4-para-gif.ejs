<%- include('../partials/header') %>

<link rel="stylesheet" href="/stylesheets/mp4-para-gif.css" />

<div class="container-fluid vh-100">
  <%- include('../partials/topbar') %>

  <div class="row h-100">
    <!-- Sidebar (3 columns) -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="col-md-9 d-flex flex-column">
      <div class="center-content mt-3">
        <!-- Drag-and-drop area -->
        <div id="dragArea" class="border rounded p-4">
          <p>Arraste o seu arquivo MP4 para aqui</p>
          <input type="file" id="fileInput" class="d-none" accept=".mp4" />
          <button id="uploadBtn" class="btn btn-primary">
            Selecione o MP4
          </button>
        </div>

        <!-- Status messages -->
        <div id="statusMessage" class="mt-3"></div>

        <!-- Preview of the result -->
        <div id="previewContainer" class="text-center mt-3 d-none">
          <h3>Preview do GIF:</h3>
          <div id="gifPreview">
            <!-- GIF preview will be displayed here -->
          </div>
          <a id="downloadLink" href="#" class="btn btn-success">Baixar o GIF Convertido</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/mp4-para-gif.js"></script>

<%- include('../partials/footer') %>
